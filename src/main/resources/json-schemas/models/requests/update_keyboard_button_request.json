{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Update keyboard's button request",
  "type": "object",
  "properties": {
    "keyboard_id": {
      "type": "string",
      "minLength": 1
    },
    "button_id": {
      "type": "string",
      "minLength": 1
    },
    "action": {
      "type": "string",
      "minLength": 1,
      "enum": [
        "add",
        "delete"
      ]
    }
  },
  "required": [
    "keyboard_id",
    "button_id",
    "action"
  ],
  "additionalProperties": false
}