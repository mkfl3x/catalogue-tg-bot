{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Keyboard",
  "type": "object",
  "properties": {
    "name": {
      "description": "Keyboard name/identifier",
      "type": "string"
    },
    "parent_keyboard": {
      "description": "Keyboard which contains current one",
      "type": "string"
    },
    "buttons": {
      "description": "Keyboard buttons",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "description": "Text on button",
            "type": "string"
          },
          "type": {
            "description": "Button type",
            "type": "string",
            "enum": [
              "payload",
              "keyboard"
            ]
          },
          "payload": {
            "description": "Payload data of button",
            "type": "string"
          },
          "keyboard": {
            "description": "Link to another keyboard",
            "type": "string"
          }
        },
        "oneOf": [
          {
            "required": [
              "text",
              "type",
              "payload"
            ]
          },
          {
            "required": [
              "text",
              "type",
              "keyboard"
            ]
          }
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "name",
    "parent_keyboard",
    "buttons"
  ],
  "additionalProperties": false
}